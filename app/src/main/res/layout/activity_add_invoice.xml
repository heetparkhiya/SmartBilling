<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".Design.AddInvoiceActivity">

    <ScrollView style="@style/ScrollViewLinearLayout">

        <LinearLayout style="@style/ScrollViewLinearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:text="Type Invoice Number :-"
                            android:textColor="#fff"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etInvoiceNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/design_spinner"
                            android:hint="Invoice Number"
                            android:padding="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="10dp"
                            android:padding="5dp"
                            android:text="Select Date :-"
                            android:textColor="#fff"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etInvoiceDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/design_spinner"
                            android:editable="false"
                            android:padding="10dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:text="Select Company :-"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spCompany"
                        style="@style/InvoiceSpinnerDesign" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:text="Select Party :-"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spParty"
                        style="@style/InvoiceSpinnerDesign" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:text="Select Transport :-"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spTransport"
                        style="@style/InvoiceSpinnerDesign" />
                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/llAddProduct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="No Product Added" />

                    <Button
                        android:id="@+id/btnAddProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorPrimary"
                        android:padding="5dp"
                        android:text="Add Product"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="15dp" />
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProductList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout style="@style/InvoiceLinearLayoutDesign">

                <TextView
                    style="@style/InvoiceTotalTextViewDesign"
                    android:text="Quantity" />

                <TextView
                    android:id="@+id/tvQuantityTotal"
                    style="@style/InvoiceTotalTextViewDesign"
                    android:text="100" />
            </LinearLayout>

            <LinearLayout style="@style/InvoiceLinearLayoutDesign">

                <TextView
                    style="@style/InvoiceTotalTextViewDesign"
                    android:text="Amount" />

                <TextView
                    android:id="@+id/tvAmountTotal"
                    style="@style/InvoiceTotalTextViewDesign"
                    android:text="100" />
            </LinearLayout>

            <LinearLayout style="@style/InvoiceLinearLayoutDesign">

                <TextView
                    style="@style/InvoiceTotalTextViewDesign"
                    android:text="IGST 5%" />

                <TextView
                    android:id="@+id/tvIGSTTotal"
                    style="@style/InvoiceTotalTextViewDesign"
                    android:text="100" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Grand Total"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tvGrandTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="100"
                android:textAlignment="textEnd"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>