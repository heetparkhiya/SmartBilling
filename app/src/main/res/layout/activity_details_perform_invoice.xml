<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".Design.DetailsPerformInvoiceActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout style="@style/ScrollViewLinearLayout">

            <androidx.cardview.widget.CardView style="@style/DetailsScreenCardViewDesign">

                <LinearLayout style="@style/DetailsScreenLinearLayoutDesign">

                    <TextView
                        style="@style/DetailsScreenHeadingTextViewDesign"
                        android:text="Party Name" />

                    <TextView
                        android:id="@+id/tvPartyName"
                        style="@style/DetailsScreenSubTextViewDesign" />

                    <TextView
                        style="@style/DetailsScreenHeadingMarginTextViewDesign"
                        android:text="Party Mobile No." />

                    <TextView
                        android:id="@+id/tvPartyMobileNo"
                        style="@style/DetailsScreenSubTextViewDesign" />

                    <TextView
                        style="@style/DetailsScreenHeadingMarginTextViewDesign"
                        android:text="Party Address" />

                    <TextView
                        android:id="@+id/tvPartyAddress"
                        style="@style/DetailsScreenSubTextViewDesign" />

                    <TextView
                        style="@style/DetailsScreenHeadingMarginTextViewDesign"
                        android:text="Party CST No." />

                    <TextView
                        android:id="@+id/tvPartyCSTNo"
                        style="@style/DetailsScreenSubTextViewDesign" />

                    <TextView
                        style="@style/DetailsScreenHeadingMarginTextViewDesign"
                        android:text="Transport Name" />

                    <TextView
                        android:id="@+id/tvTransportName"
                        style="@style/DetailsScreenSubTextViewDesign" />

                    <TextView
                        style="@style/DetailsScreenHeadingMarginTextViewDesign"
                        android:text="Product Name" />

                    <TextView
                        android:id="@+id/tvProductName"
                        style="@style/DetailsScreenSubTextViewDesign" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DetailsScreenHeadingMarginTextViewDesign"
                                android:text="List No." />

                            <TextView
                                android:id="@+id/tvListNo"
                                style="@style/DetailsScreenSubTextViewDesign" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DetailsScreenHeadingMarginTextViewDesign"
                                android:text="List Date" />

                            <TextView
                                android:id="@+id/tvListDate"
                                style="@style/DetailsScreenSubTextViewDesign" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/DetailsScreenHeadingMarginTextViewDesign"
                                android:text="Case No." />

                            <TextView
                                android:id="@+id/tvCaseNo"
                                style="@style/DetailsScreenSubTextViewDesign" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        style="@style/DetailsScreenHeadingMarginTextViewDesign"
                        android:text="Total Quantity" />

                    <TextView
                        android:id="@+id/tvTotalQuantity"
                        style="@style/DetailsScreenSubTextViewDesign" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>